    <li><a href="/about">about</a></li>
{% endblock %}

{% block main %}
    <!-- entry -->
    <section class="entry">
        <article class="card">
            <figure>
                <img src="{{ entry.image.one().url }}" alt="">
                <figcaption>{{ entry.title }}
                </figcaption>
                <time>11/11/11</time>
            </figure>
            <p class="headline">{{ entry.headline }}</p>
                {{ entry.copy }}
            <nav class="entry-nav">
                <a href="" class="previous press">previous</a>
                <a href="index.html" class="next press">
                    next
                </a>
            </nav>
        </article>
    </section>
{% endblock %}

{% block javascript %}
    {% do view.registerJsFile(""~siteUrl~"/single/main.js") %}
{% endblock %}
