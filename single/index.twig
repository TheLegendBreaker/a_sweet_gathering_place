{% extends '_layout' %}

{% block stylesheets %}
    {% do view.registerCssFile(""~siteUrl~"/single/style.css") %}
{% endblock %}

{% block logo %}
    <h1 class="main-title hoverd">A Sweet Gathering Place</h1>
{% endblock %}

{% block nav_menu %}
    <li><a href="/">home</a></li>
    <li><a href="">pervious</a></li>
